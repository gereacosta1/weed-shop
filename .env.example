# Environment Configuration

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Payment Gateway Configuration
NEXT_PUBLIC_PAYMENT_GATEWAY=mock
# Options: mock, paymentcloud, easypay

# PaymentCloud Configuration
PAYMENTCLOUD_API_KEY=your_paymentcloud_api_key_here
PAYMENTCLOUD_MERCHANT_ID=your_merchant_id_here
PAYMENTCLOUD_WEBHOOK_SECRET=your_webhook_secret_here

# EasyPayDirect Configuration
EASYPAY_API_KEY=your_easypay_api_key_here
EASYPAY_MERCHANT_ID=your_merchant_id_here
EASYPAY_WEBHOOK_SECRET=your_webhook_secret_here

# Admin Panel (Optional)
ADMIN_PASSWORD=your_secure_admin_password

# Analytics (Optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_analytics_id